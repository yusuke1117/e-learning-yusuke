<div class="container-fluid pt-4 indexbg">
    <div class="d-flex align-content-center float-left flex-wrap  my-box-light" style="height: 40rem;">
        <div class="container indexgamen">
            <h2 class="text-center">New Category</h2>
                <%= link_to "Create", new_admin_category_path, class: "btn btn-flat-simple btn-block mt-4" %>
        </div>
    </div>

    <div class="d-flex float-center flex-wrap my-box-light pt-5" style="height: 16rem;">            
        <table class="category_table table-responsive-md table-striped border border-dark">   
            <thead>
                <tr class="">
                    <td>Title</td>
                    <td>discription</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                <% @categories.each do |category| %>
                    <tr>
                        <td><%= category.title %></td>
                        <td><%= category.description %></td>
                        <td><%= link_to "Add", admin_category_path(category), class: "kk" %>/<%= link_to "Edit", edit_admin_category_path(category), class: "aaa" %>/<%= link_to 'Delete', admin_category_path(category), method: :delete,
                                                                                                                                data: { confirm: "Are you sure?" } %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <%= will_paginate %> 
</div>    