<% if object.errors.any? %>
    <div class="alert alert-danger">
        <div>
            <%= pluralize(object.errors.count, "error") %> prohibited this action:
        </div>
        <ul>
            <% object.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>