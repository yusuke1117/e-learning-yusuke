<% if user != current_user %>
    <% if current_user.following?(user) %>
        <%= button_to "Unfollow", relationship_path(current_user.active_relationships.find_by(followed: user)), method: :delete, class: "btn btn-primary" %>
    <% else %>
        <%= button_to "Follow", relationships_path, params: {followed_id: user.id}, class: "btn btn-primary" %>
    <% end %>
<% end %>